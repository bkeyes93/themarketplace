<!doctype HTML>
<html>
  <head>
    <link rel="stylesheet" href="/css/sticky-footer.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>
      The Marketplace
    </title>
  </head>
    <body>
        {{>header}}
        <main role="main" class="container">
          <div id="lstItems" class="list-group col-9 mb-4" style="margin-left: auto; margin-right: auto;"></div>
          <div class="jumbotron text-center justify-content-center" style="width: 48%; float: left; margin-right:10px; margin-bottom:100px;">
            <h2 style="margin-top: -10%;">List an item!</h2>
            <form style="text-align: left;" id="addForm">
              <div class="form-group form-inline">
                <label for="formTitle" style="width:140px; text-align:right;">Name:</label>
                <input type="text" placeholder="Item name" class="form-control col-4" id="formTitle">
              </div>
              <div class="form-group form-inline">
                <label for="formDescription" style="width:140px; text-align:right;">Description:</label>
                <input type="text" placeholder="Item description" class="form-control col-4" id="formDescription">
              </div>
              <div class="form-group form-inline">
                <label for="formCategory" style="width:140px; text-align:right;">Category:</label>
                <select name="formCategory" id="formCategory">
                  <option value="Electronics">Electronics</option>
                  <option value="Furniture">Furniture</option>
                  <option value="Clothing">Clothing</option>
                  <option value="Other">Other</option>
                </select>
              </div>
              <div class="form-group form-inline">
                <label for="formPrice" style="width:140px; text-align:right;">Price:</label>
                <input type="text" placeholder="Price" class="form-control col-4" id="formPrice">
              </div>
              <div class="form-group form-inline">
                <label for="formSeller" style="width:140px; text-align:right;">Seller Name:</label>
                <input type="text" value="anonymous" class="form-control col-4" id="formSeller">
              </div>
              <div class="form-group form-inline">
                <label for="formLatitude" style="width:140px; text-align:right;">Latitude:</label>
                <input type="text" placeholder="Latitude" class="form-control col-4" id="formLatitude">
              </div>
              <div class="form-group form-inline">
                <label for="formLongitude" style="width:140px; text-align:right;">Longitude:</label>
                <input type="text" placeholder="Longitude" class="form-control col-4" id="formLongitude">
              </div>
              <div class="form-group form-inline">
                <label for="formContact" style="width:140px; text-align:right;">Contact:</label>
                <input type="text" placeholder="Contact" class="form-control col-4" id="formContact">
              </div>
              <button type="submit" class="btn btn-dark">Submit</button>
            </form>
          </div>

          <div class="jumbotron text-center justify-content-center" style="width: 50%; float: right;">
            <h2 style="margin-top: -10%;">Remove Listing</h2>
            <form style="text-align: left;" id="deleteForm">
              <div class="form-group form-inline">
                <label for="formId" style="width:140px; text-align:right;">Listing ID:</label>
                <input type="text" placeholder="Listing ID" class="form-control col-4" id="formId">
              </div>
              <button type="submit" class="btn btn-dark">Remove</button>
            </form>
          </div>

          <!-- Modal -->
          <div class="modal fade" id="modalCenter" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="modalLongTitle">Modal title</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <p id="modalDescription"></p>
                  <p id="modalCategory"></p>
                  <p id="modalPrice"></p>
                  <p id="modalSeller"></p>
                  <p id="modalLocation"></p>
                  <p id="modalContact"></p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>

        </main>
        {{>footer}}

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
        <script src="/scripts/index.js"></script>  
    </body>
  </html>